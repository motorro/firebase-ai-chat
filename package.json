{
  "name": "firebase-openai-chat",
  "version": "0.0.2",
  "description": "Firebase AI chat",
  "main": "lib/index.js",
  "files": ["lib/*"],
  "engines": {
    "node": "18"
  },
  "scripts": {
    "lint": "eslint --ext .js,.ts .",
    "build": "tsc",
    "pretest": "npm run build",
    "test:run": "mocha './test/**/*.spec.{ts,tsx}' --reporter spec",
    "test:watch": "mocha --watch --watch-files './test/**/*.spec.{ts,tsx}' --reporter spec",
    "test": "FIRESTORE_EMULATOR_HOST='localhost:8080' FIREBASE_FIRESTORE_EMULATOR_ADDRESS='localhost:8080' firebase emulators:exec --only firestore 'npm run test:run'"
  },
  "author": "motorro",
  "license": "ISC",
  "dependencies": {
    "@types/node": "^18.16.3",
    "google-auth-library": "^9.6.3",
    "openai": "^4.27.0",
    "short-unique-id": "^5.0.3",
    "ts-node": "^10.9.1"
  },
  "peerDependencies": {
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^4.7.0"
  },
  "devDependencies": {
    "@johanblumenberg/ts-mockito": "^1.0.41",
    "@types/chai": "^4.3.5",
    "@types/chai-as-promised": "^7.1.5",
    "@types/mocha": "^10.0.1",
    "@types/sinon": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "chai": "^4.3.7",
    "chai-as-promised": "^7.1.1",
    "eslint": "^8.9.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.25.4",
    "firebase-functions-test": "^3.1.0",
    "firebase-tools": "^13.3.0",
    "mocha": "^10.2.0",
    "sinon": "^17.0.1",
    "typescript": "^4.9.0"
  },
  "repository": "https://github.com/motorro/firebase-openai-chat.git"
}
